# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,json,html,scss}]
charset = utf-8
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
