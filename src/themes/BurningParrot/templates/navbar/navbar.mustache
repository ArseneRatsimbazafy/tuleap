{{# navbar_presenter }}
<header>
    {{# has_motd }}
        <div class="header-motd">{{{ motd }}}</div>
    {{/ has_motd }}
    <div class="header-container">
        <div class="header-nav">
            <a href="/" id="logo" aria-label="{{ homepage_label }}"></a>

            <nav id="global-nav">
                {{> navbar/global-nav }}

                {{# is_super_user }}
                    <a href="/admin/" class="nav-link go-to-admin" data-test="platform-administration-link">
                        <span class="nav-link-test">{{# gettext }}Administration{{/ gettext }}</span>
                    </a>
                {{/ is_super_user }}
            </nav>
        </div>

        <div class="header-nav">
            {{# new_dropdown }}
                {{# has_sections }}
                    <div id="nav-dropdown-new" class="nav-dropdown nav-dropdown-right">
                        <div class="nav-dropdown-link" data-nav-dropdown-content-id="nav-dropdown-content-new" data-shortcut-create>
                            <i class="fa fa-plus nav-dropdown-new-icon" aria-hidden="true"></i>
                            {{# gettext }}New{{/ gettext }}
                        </div>

                        <div id="nav-dropdown-content-new" class="nav-dropdown-content nav-dropdown-content-hidden">
                            <div class="arrow-up nav-dropdown-content-arrow-up"></div>
                            {{# sections }}
                                <hr class="nav-dropdown-content-user-divider">
                                <div class="nav-dropdown-content-item-title">{{ label }}</div>
                                {{# links }}
                                    <a href="{{ url }}" class="nav-dropdown-content-item" data-shortcut-create-option>
                                        <i class="fa fa-fw {{ icon }} nav-dropdown-content-user-link-icon" aria-hidden="true"></i>
                                        {{ label }}
                                    </a>
                                {{/ links }}
                             {{/ sections }}
                        </div>
                    </div>
                {{/ has_sections }}
            {{/ new_dropdown }}

            {{# switch_to }}
                <button type="button" id="switch-to-button" data-target-modal-id="switch-to-modal">
                    <i class="fa fa-search nav-switch-to-icon" aria-hidden="true"></i>
                    {{# gettext }}Switch to...{{/ gettext }}
                </button>
            {{/ switch_to }}

            {{> navbar/user-nav }}
        </div>
    </div>
</header>
{{/ navbar_presenter }}
