<li class="nav-history-entry">
    <button
        title="{{ history }}"
        id="nav-dropdown-user-history"
        class="nav-form-button dropdown-toggle"
        data-toggle="dropdown"
    >
        <i class="icon fa fa-clock-o"></i>
    </button>
    {{> navbar-history }}
</li>
<li class="dropdown navbar-user-dropdown">
    <button type="button" class="dropdown-toggle" data-toggle="dropdown" data-shortcut-mydashboard>
        <img class="user-avatar" src="{{ user_avatar }}"/>
    </button>
    <ul class="dropdown-menu pull-right">
        <li class="user-infos">
            <img class="user-avatar" src="{{ user_avatar }}" />
            <div class="user-infos-names">
                <span class="user-infos-real-name">{{ user_real_name }}</span>
                <span class="user-infos-login-name">{{ user_login_name }}</span>
            </div>
        </li>

        {{# has_no_dashboards }}
            <li>
                <a href="/my/"
                   class="nav-dropdown-content-item nav-dropdown-content-item-unique-dashboard"
                   data-shortcut-mydashboard-option
                >
                    {{# gettext }}My dashboard{{/ gettext }}
                </a>
            </li>
        {{/ has_no_dashboards }}
        {{^ has_no_dashboards }}
            {{^ has_one_dashboard }}
                <li>
                    <div class="nav-dropdown-content-item-title">Dashboards</div>
                </li>
            {{/ has_one_dashboard }}
            {{# dashboards }}
                <li>
                    <a href="/my/?dashboard_id={{ getId }}"
                        class="nav-dropdown-content-item {{# has_one_dashboard }}nav-dropdown-content-item-unique-dashboard{{/ has_one_dashboard }}"
                        data-shortcut-mydashboard-option
                    >
                        {{ getName }}
                    </a>
                </li>
            {{/ dashboards }}
        {{/ has_no_dashboards }}

        <li class="divider"></li>

        <li>
            <a id="navbar-user-settings" href="/account/" title="{{ my_account_label }}">
                <i class="fa fa-fw fa-cog nav-user-item-icon" aria-hidden="true"></i>
                {{# gettext }}Preferences{{/ gettext }}
            </a>
        </li>
        <li>
            <form
                class="nav-form"
                action="/account/logout"
                method="POST"
            >
                {{# logout_csrf }}
                    {{> csrf_token_input }}
                {{/ logout_csrf }}
                <button
                    class="nav-form-button-logout"
                    type="submit"
                    title="{{ logout_label }}"
                    data-test="user_logout"
                >
                    <i class="icon fa fa-fw fa-power-off nav-user-item-icon" aria-hidden="true"></i>
                    {{# gettext }}Logout{{/ gettext }}
                </button>
            </form>
        </li>
    </ul>
</li>
