<h2>{{# gettext }}License Agreements{{/ gettext }}</h2>

<div class="row-fluid">
    <div class="span6">
        <p><a href="{{ create_url }}" class="btn btn-primary">{{# gettext }}Create new License Agreement{{/ gettext }}</a></p>
        <table class="table">
            <thead>
            <th>{{# gettext }}Title{{/ gettext }}</th>
            <th>{{# gettext }}Is default ?{{/ gettext }}</th>
            <th>{{# gettext }}Actions{{/ gettext }}</th>
            </thead>
            <tbody>
            {{# license_agreements }}
                <tr>
                    <td>{{ title }}</td>
                    <td>{{# is_default }}<i class="fa fa-check" />{{/ is_default }}</td>
                    {{# can_edit }}
                        <td><a href="{{ url }}" class="fa fa-pencil-square-o">{{# gettext }}edit{{/ gettext }}</a></td>
                    {{/ can_edit }}
                    {{# can_view_only }}
                        <td><a href="{{ url }}" class="fa fa-eye">{{# gettext }}view{{/ gettext }}</a></td>
                    {{/ can_view_only }}
                    {{# no_actions }}
                        <td></td>
                    {{/ no_actions }}
                </tr>
            {{/ license_agreements }}
            </tbody>
        </table>
    </div>
</div>
