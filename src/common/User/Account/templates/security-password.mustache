<section class="tlp-pane">
    <form id="account-security-session-form" class="tlp-pane-container" action="{{ change_password_url }}" method="post">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">
                <i class="tlp-pane-title-icon fa fa-lock" aria-hidden="true"></i>
                {{# gettext }}Update password{{/ gettext }}
            </h1>
            <section class="tlp-pane-section">
                <input type="hidden" value="{{ username }}" autocomplete="username" />
                {{# old_password_is_required }}
                    <div class="tlp-form-element">
                        <label class="tlp-label" for="current_password">{{# gettext }}Current password{{/ gettext }} <i class="fa fa-asterisk"></i></label>
                        <input type="password" class="tlp-input" id="current_password" name="current_password" autocomplete="current-password" required />
                    </div>
                {{/ old_password_is_required }}
                <div class="tlp-form-element">
                    <label class="tlp-label" for="new_password">{{# gettext }}New password{{/ gettext }} <i class="fa fa-asterisk"></i></label>
                    <input type="password" class="tlp-input" id="new_password" name="new_password" autocomplete="new-password" required />
                </div>
                <div class="tlp-form-element">
                    <label class="tlp-label" for="repeat_new_password">{{# gettext }}Repeat new password{{/ gettext }} <i class="fa fa-asterisk"></i></label>
                    <input type="password" class="tlp-input" id="repeat_new_password" name="repeat_new_password" autocomplete="new-password" required />
                </div>

            </section>
            <section class="tlp-pane-section tlp-pane-section-submit user-preferences-section-submit">
                {{# csrf_token }}
                    {{> csrf_token_input }}
                {{/ csrf_token }}
                <button type="submit" class="tlp-button-primary">
                    <i class="fa fa-floppy-o tlp-button-icon"></i> {{# gettext }}Update password{{/ gettext }}
                </button>
            </section>
        </div>
    </form>
</section>
