<div class="tlp-framed-horizontally">
    <section class="tlp-pane">
        <div class="tlp-pane-container">
            <div class="tlp-pane-header">
                <h1 class="tlp-pane-title">
                    <i class="fa fa-globe tlp-pane-title-icon"></i>
                    {{# dgettext }}tuleap-oauth2_server | OAuth2 Apps{{/ dgettext }}
                </h1>
            </div>
            <section class="tlp-pane-section">
                <div class="tlp-table-actions">
                    <button type="button" class="tlp-button-primary tlp-table-actions-element" disabled>
                        <i class="fa fa-plus tlp-button-icon"></i> {{# dgettext }}tuleap-oauth2_server | Add App{{/ dgettext }}
                    </button>
                </div>
                <table class="tlp-table">
                    <thead>
                    <tr>
                        <th>{{# dgettext }}tuleap-oauth2_server | App name{{/ dgettext }}</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# apps }}
                        <tr>
                            <td>{{ name }}</td>
                            <td class="tlp-table-cell-actions">
                                <button class="tlp-button-danger tlp-button-outline" disabled>
                                    <i class="fa fa-trash-o tlp-button-icon"></i>
                                    {{# dgettext }}tuleap-oauth2_server | Delete{{/ dgettext }}
                                </button>
                            </td>
                        </tr>
                    {{/ apps }}
                    </tbody>
                </table>
            </section>
        </div>
    </section>
</div>
