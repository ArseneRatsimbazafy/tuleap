<div class="user-preferences">
    <h1 class="user-preferences-title">
        {{# gettext }}Preferences{{/ gettext }}
    </h1>
    <div class="user-preferences-container">
        <nav class="tlp-tabs tlp-tabs-vertical user-preferences-nav">
            {{# tabs }}
                <a href="{{ href }}" class="tlp-tab {{# is_active }}tlp-tab-active{{/ is_active }}">
                    <i class="tlp-tab-icon fa {{ icon }}"></i>
                    {{ label }}
                </a>
            {{/ tabs }}
        </nav>

        <div class="user-preferences-section">
        </div>
    </div>
</div>
