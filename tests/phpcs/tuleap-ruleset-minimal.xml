<?xml version="1.0"?>
<ruleset
        name="Tuleap"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../src/vendor/squizlabs/php_codesniffer/phpcs.xsd"
>
    <description>Tuleap minimal coding standard.</description>

    <!-- Autofix fails on those files, ignore them for now -->
    <exclude-pattern>src/common/wiki/phpwiki/lib/plugin/CalendarList.php</exclude-pattern>
    <exclude-pattern>src/common/wiki/phpwiki/lib/plugin/Calendar.php</exclude-pattern>
    <exclude-pattern>src/common/wiki/phpwiki/lib/BlockParser.php</exclude-pattern>
    <exclude-pattern>src/common/wiki/phpwiki/lib/WikiDB.php</exclude-pattern>
    <exclude-pattern>src/common/wiki/phpwiki/lib/XmlElement.php</exclude-pattern>
    <exclude-pattern>src/common/wiki/phpwiki/lib/HtmlElement.php</exclude-pattern>
    <exclude-pattern>plugins/mediawiki/fusionforge/FusionForge.php</exclude-pattern>
    <exclude-pattern>plugins/projectlinks/include/projectlinksPlugin.class.php</exclude-pattern>
    <exclude-pattern>plugins/tracker/include/Tracker/FormElement/Tracker_FormElement_Field_ArtifactLink.class.php</exclude-pattern>

    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength.TooLong"/>
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
        <!-- checked by SlevomatCodingStandard.Namespaces.UseSpacing -->
        <exclude name="PSR2.Namespaces.UseDeclaration.SpaceAfterLastUse"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
        <exclude name="PSR2.ControlStructures.SwitchDeclaration.TerminatingComment"/>
        <exclude name="Squiz.Scope.MethodScope.Missing"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.ScopeMissing"/>
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
        <exclude name="PSR2.ControlStructures.SwitchDeclaration.WrongOpenercase"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.VarUsed"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses"/>
        <exclude name="PSR2.ControlStructures.SwitchDeclaration.WrongOpenerdefault"/>
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceSameLine"/>
        <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace"/>
        <exclude name="PEAR.Functions.ValidDefaultValue.NotAtEnd"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.Multiple"/>
        <exclude name="Generic.NamingConventions.UpperCaseConstantName.ConstantNotUpperCase"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.Multiple"/>
    </rule>
    <!-- Forbid superfluous whitespaces -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <!-- turned on by PSR2 -> turning back off -->
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="./non-psr-rules.xml"/>
</ruleset>
